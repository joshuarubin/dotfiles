{
  "suggest.noselect": true,
  "coc.preferences.diagnostic.displayByAle": true,
  "coc.preferences.hoverTarget": "preview",
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": ["--diagnostics-style=instant", "--format-style=goimports"],
